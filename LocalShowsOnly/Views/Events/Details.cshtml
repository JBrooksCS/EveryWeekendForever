@model LocalShowsOnly.Models.Event

@{
    ViewData["Title"] = "Details";
}

    <h1> @Html.DisplayFor(model => model.title)</h1>

<div>
    
    <hr />
    <dl class="row">

        <dt class="col-sm-2">

            &nbsp
        </dt>
        <dd class="col-sm-10">

            <img src="@Url.Content(Model.photoURL)" alt="Image" style="max-height: 200px; max-width:200px;" />

        </dd>


        <dt class="col-sm-2">

            Date
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.showtime)
        </dd>
        <dt class="col-sm-2">
            Price
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.price)
        </dd>
        <dt class="col-sm-2">
            Link
        </dt>
        <dd class="col-sm-10">
            <a href="@Html.DisplayFor(model => model.externalLink)" target="_blank">@Html.DisplayFor(model => model.externalLink)</a>
        </dd>
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.description)
        </dd>

    </dl>
</div>
<div>
    @if (Model.hostId == ViewBag.UserId){
    <a asp-action="Edit" asp-route-id="@Model.id">Edit</a> <a>|</a>
    }
    <a asp-action="Index">Back to List</a>
</div>
