@model LocalShowsOnly.Models.Band


@using (Html.BeginForm("Create",
      "Bands",
      FormMethod.Post,
      new { enctype = "multipart/form-data" }))
{
    <h1>Create</h1>

    <h4>Band</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="bandName" class="control-label">Band Name</label>
                    <input asp-for="bandName" class="form-control" />
                    <span asp-validation-for="bandName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="bio" class="control-label">About</label>
                    @*<input style="height:6em; width:30em;" asp-for="bio" class="form-control" />*@
                    <textarea asp-for="bio" class="form-control"></textarea>
                    <span asp-validation-for="bio" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="externalLink" class="control-label">Link to Music / Website</label>
                    <input asp-for="externalLink" class="form-control" />
                    <span asp-validation-for="externalLink" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="genre" class="control-label">Style of Music</label>
                    <select asp-for="genre" class="form-control" asp-items="ViewBag.genres"></select>
                    <span asp-validation-for="genre" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="photoURL" class="control-label">Band Photo</label>
                    <input type="file" name="file" id="file" required="required" />
                </div>
                <div class="form-group">
                    <label asp-for="SpotifyURI" class="control-label">Spotify Song URI</label>
                    <input asp-for="SpotifyURI" class="form-control" />
                    <span asp-validation-for="SpotifyURI" class="text-danger"></span>
                </div>
                @*<div class="form-group form-check">
            <label class="form-check-label">
                <input class="form-check-input" asp-for="isActive" /> @Html.DisplayNameFor(model => model.isActive)
            </label>
        </div>*@
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>
}
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
