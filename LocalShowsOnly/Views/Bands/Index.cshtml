@model IEnumerable<LocalShowsOnly.Models.Band>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.bandName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.bio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.externalLink)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.photoURL)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.isActive)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <img src="@Url.Content(item.photoURL)" style="max-height: 200px; max-width:200px;" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.bandName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.bio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.externalLink)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.photoURL)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.isActive)
            </td>
            <td>
                <form>
                    <input type="submit" name="details" value="Details" formaction="/Events/Details/@item.id" formmethod="get" />
                </form>
            </td>



            <td>
                @*<a asp-action="Details" asp-route-id="@item.id">Details</a>*@
                @{

                    if (item.hostId == ViewBag.UserId)
                    {
                        <div style="display:flex; flex-direction:row; ">

                            <a asp-action="Edit" asp-route-id="@item.id">Edit</a>

                            <a asp-action="Delete" asp-route-id="@item.id" style="margin-left:1em;">Delete</a>
                        </div>
                    }
                }



            </td>
        </tr>
}
    </tbody>
</table>
