@model IEnumerable<LocalShowsOnly.Models.Band>

@{
    ViewData["Title"] = "Index";
}
   

<h2 class="bandsHeader">[BANDS]</h2>


<table class="table">
    <thead>
        <tr>
            <th>

                NAME
            </th>
            <th>
                &nbsp
            </th>

            <th>

                &nbsp
            </th>
            <th>

                @using (Html.BeginForm())
                {
                    
                        @Html.DropDownList("genreListItem",
                                        ViewBag.genres,
                                        "STYLE",
                                        new { onchange = "this.form.submit();" })
                    
                }
            </th>
            <th>	&#127911</th>
            <th>

                &nbsp
            </th>
        </tr>
    </thead>
    <tbody class="myList">
        @{int totalThings = @Model.Count();
            Random rnd = new Random();
            int featured = rnd.Next(1, totalThings);
            int i = 0;
            }
        @foreach (var item in Model)
        {
            i++;
        <tr>


            <td style="font-family:Permanent Marker; font-size:1.4em; ">
                @Html.DisplayFor(modelItem => item.bandName)
                @{
                    if (@i == featured)
                    {
                    <div style="background-color:rgb(242, 248, 80); text-align:center; font-family:Permanent Marker; font-size:1.7em; padding:.5em;box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19); " class="shake-constant shake">
                        FEATURED ARTIST
                    </div>
                }
                }
                </td>
                <td>
                    <img src="@Url.Content(item.photoURL)" style="max-height: 400px; max-width:400px; box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);" />
                </td>
                @{
                    if (item.externalLink != null)
                    {
                        <td>
                            <a href="@Html.DisplayFor(modelItem => item.externalLink)" class="text-secondary" target="_blank">[Website]</a>
                        </td>
                    }
                    else
                    {
                        <td>
                            <p>
                                &nbsp
                            </p>
                        </td>
                    }
                }
                <td>
                    @Html.DisplayFor(modelItem => item.genre)
                </td>

                <td>
                    <iframe src="https://open.spotify.com/embed/track/@item.SpotifyURI" width="300" height="380" frameborder="0" allowtransparency="true" allow="encrypted-media" style="box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19)"></iframe>
                </td>
                @*<td>
                <form>
                    <input type="submit" name="details" value="Details" formaction="/Bands/Details/@item.id" formmethod="get" />
                </form>
            </td>*@
                <td>
                    @*<a asp-action="Details" asp-route-id="@item.id">Details</a>*@
                    @{

                        if (item.hostId == ViewBag.UserId)
                        {

                            <form>
                                <div class="btn-group-vertical">
                                    <button type="submit" name="details" value="Details" formaction="/Bands/Details/@item.id" formmethod="get" class="btn btn-dark">Details</button>
                                    <button asp-action="Edit" asp-route-id="@item.id" class="btn btn-dark">Edit</button>
                                    <button asp-action="Delete" asp-route-id="@item.id" class="btn btn-dark">Delete</button>
                                </div>
                            </form>
                        }
                        else
                        {
                            <form>
                                <div class="btn-group-vertical">
                                    <button type="submit" name="details" value="Details" formaction="/Bands/Details/@item.id" formmethod="get" class="btn btn-dark">Details</button>

                                </div>
                            </form>
                        }
                    }



                </td>
            </tr>
        }
    </tbody>
</table>

